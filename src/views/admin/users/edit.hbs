<!-- Edit User -->

<h1> Editar Usuario</h1>
<hr>

<form id="editForm" action="/sgd/users/edit/{{user.usr_id}}" method="POST">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="inputId"> ID </label>
            <input type="number" value="{{user.usr_id}}" class="form-control" id="inputId" name="id" placeholder="Cod Dep + ID" >
        </div>
        <div class="form-group col-md-7">
            <label for="inputName"> Nombre </label>
            <input type="text" value="{{user.usr_name}}" class="form-control" id="inputName" name="name">
        </div>
        <div class="form-group col-md-2">
            <label for="inputUser"> Usuario </label>
            <input type="text" value="{{user.usr_username}}" class="form-control" id="inputUser" name="username">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputEmail"> Correo Electronico </label>
            <input type="email" value="{{user.usr_email}}" class="form-control" id="inputEmail" name="email">
        </div>
        <div class="form-group col-md-8">
            <label for="inputDependence"> Dependecia </label>
                <select class="form-control" id="inputDependence" name="dependence" value="{{user.dep_id}} - {{user.dep_name}}">
                    {{#each deps}}
                        <option value="{{dep_id}}">{{dep_id}} - {{dep_name}}</option>
                    {{/each}}
                </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="inputPerfil"> Perfil </label>
            <select class="form-control" id="inputPerfil" name="profile" value="{{user.usr_profile}}">
                <option>Jefe</option>
                <option>Normal</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="inputRol"> Rol </label>
            <select class="form-control" id="inputRol" name="rol" selected="{{user.usr_rol}}">
                <option>Contratista</option>
                <option>Auxiliar Administrativo</option>
                <option>Profesional Universitario</option>
                <option>Profesional Especializado</option>
                <option>Asesor</option>
                <option>Directivo</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label for="inputTel"> Telefono </label>
            <input type="text" value="{{user.usr_tel}}" class="form-control" id="inputTel" name="tel">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputOffice"> Oficina </label>
            <input type="text" value="{{user.usr_office}}" class="form-control" id="inputOffice" name="office" placeholder="Dirección + Edificio">
        </div>
        <div class="form-group col-md-5">
            <label for="inputBuilding"> Edificio </label>
            <select class="form-control" id="inputBuilding" name="building">
                {{#each buildings}}
                    <option value="{{ed_id}}">{{ed_id}} - {{ed_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group col-md-3">
            <label for="inputState"> Estado </label>
            <select class="form-control" id="inputState" name="state" value="{{user.usr_state}}">
                <option> Activo </option>
                <option> Inactivo </option>
            </select>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="changePass">
            <label class="form-check-label" for="changePass"> Solicitar cambio de contraseña </label>
        </div>
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons" id="btnAction">
        <a class="btn btn-secondary" href="/sgd/users" id="btnCancel"> Cancelar </a>
        <button type="submit" form="editForm" class="btn btn-primary" id="btnSubmit"> Guardar </button>
    </div>
</form>